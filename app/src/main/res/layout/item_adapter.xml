<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="8dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_margin="16dp"
                tools:text="Otimizar códigos do aplicativo para deixar o aplicativo mais rápido"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_margin="12dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnVoltar"
                    android:layout_weight="2"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@android:color/transparent"
                    tools:tint="@color/background"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_remover"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="Remover"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/remover"
                    android:background="@drawable/bg_btn_task"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_editar"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/editar"
                    android:background="@drawable/bg_btn_task"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_detalhes"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:layout_width="70dp"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="Detalhes"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/detalhes"
                    android:background="@drawable/bg_btn_task"/>

                <ImageButton
                    android:id="@+id/btnProximo"
                    android:layout_weight="2"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent"
                    tools:tint="@color/background"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>